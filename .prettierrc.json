{
    "tabWidth": 2,
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 200,
    "overrides": [{
        "files": [
            "packages/angular/**/*.component.html",
            "packages/shell/**/*.component.html"
        ],
        "options": {
            "printWidth": 80
        }
    }, {
        "files": ["packages/react/**/*.ts", "packages/react/**/*.tsx"],
        "options": {
          "singleQuote": true,
          "jsxSingleQuote": true
        }
    }]
}
